generator client {
    provider        = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id             String    @id @default(auto()) @map("_id") @db.ObjectId
    name           String
    userType       String    @default("user")
    image          String?
    email          String?   @unique
    emailVerified  DateTime?
    hashedPassword String?
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
    favoriteIds    String[]  @db.ObjectId
}

model Movie {
    id           String @id @default(auto()) @map("_id") @db.ObjectId
    title        String
    description  String
    videoUrl     String
    thumbnailUrl String
    genre        String
    duration     String
}

model Message {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    message   String
    userName  String
    userEmail String
}
